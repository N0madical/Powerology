{
    "manifest_version": 3,
    "name": "Powerology",
    "version": "8.1",
  
    "description": "Visually modifies the Post Oak Schoology page to look and act more like Powerschool",
  
    "icons": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    },

    "permissions": [
      "storage"
    ],

    "host_permissions": [
      "*://postoakschool.schoology.com/*",
      "*://powerology.aidencunningham.com/",
      "https://api.github.com/*"
    ],

    "web_accessible_resources": [
      {
      "resources": ["icons/*"],
      "matches": ["*://postoakschool.schoology.com/*"]
      }
    ],

    "action": {
      "default_icon": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
      },
      "default_title": "Powerology Settings",
      "default_popup": "extensionButton/index.html"
    },
  
  
    "content_scripts": [
      {
        "matches": ["*://postoakschool.schoology.com/*"],
        "css": ["styles.css", "fonts.css"],
        "js": ["globalFunctions.js", "globalIndex.js"]
      },
      {
        "matches": ["*://postoakschool.schoology.com/", "*://postoakschool.schoology.com/home*"],
        "js": ["home/functions.js", "home/variables.js", "home/index.js"]
      },
      {
        "matches": ["*://postoakschool.schoology.com/link*"],
        "js": ["linkPage/index.js"]
      },
      {
        "matches": ["*://postoakschool.schoology.com/course/*/student_district_mastery/*", "*://postoakschool.schoology.com/course/*/student_district_mastery"],
        "css": ["masteryPage/styles.css"],
        "js": ["masteryPage/index.js"]
      },
      {
        "matches": ["*://powerology.aidencunningham.com/"],
        "js": ["powerologyWeb/index.js"]
      },
      {
        "matches": ["*://postoakschool.schoology.com/settings/account/sethome"],
        "js": ["settingsPage/index.js"]
      },
      {
        "matches": ["*://postoakschool.schoology.com/grades/grades"],
        "js": ["gradeOverview/index.js"],
        "css": ["gradeOverview/styles.css"]
      },
      {
        "matches": ["*://postoakschool.schoology.com/course/*", "*://postoakschool.schoology.com/assignment/*"],
        "js": ["classPage/index.js"]
      }
    ],

    "browser_specific_settings": {
        "gecko": {
          "id": "nomadicalyt@g"
        }
    } 
  }
  